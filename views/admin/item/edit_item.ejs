<div
  class="tab-pane fade show active"
  id="edit-item"
  role="tabpanel"
  aria-labelledby="profile-tab"
>
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <form enctype="multipart/form-data" action="/admin/item/<%= item.id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            class="form-control title"
            id="title"
            name="title"
            value="<%= item.title %>"
            placeholder="Enter Title"
            required
          />
        </div>
        <div class="form-group">
          <label for="price">price</label>
          <input
            type="number"
            class="form-control price"
            id="price"
            name="price"
            value="<%= item.price %>"
            placeholder="Enter Price"
            required
          />
        </div>
        <div class="form-group">
          <label for="city">City</label>
          <input
            type="text"
            class="form-control city"
            id="city"
            name="city"
            value="<%= item.city %>"
            placeholder="Enter City"
            required
          />
        </div>
        <div class="form-group">
          <label for="categoryId">Category</label>
          <select class="form-control category" name="categoryId" id="categoryId">
            <option value="" disabled>Select your option</option>
            <% categories.forEach(category => { %>
                <% var selected = (category.id == item.categoryId.id) ? "selected" : ""; %> 
              <option value="<%= category.id %>" <%=selected%> ><%= category.name %> </option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input
            type="file"
            class="form-control image"
            name="image"
            placeholder="Enter image"
            multiple
          />
        </div>
        <div class="form-group mt-4">
          <label for="description">Description</label>
          <textarea
            class="form-control"
            name="description"
            id="description"
          ><%= item.description %></textarea>
        </div>
        <a href="/admin/item" class="btn btn-warning btn-icon-split">
            <span class="icon"><i class="fas fa-arrow-left"></i></span><span class="text"> Back </span>
        </a>
        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>
</div>
