<div
  class="tab-pane fade show"
  id="show-activity"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <h3 class="mb-4">Activity</h3>
      <div class="row">
        <div class="col-md-5">
          <!-- Modal -->
          <form
            action="/admin/bank"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                name="name"
                placeholder="Name Activity"
                required
              />
            </div>
            <div class="form-group">
              <label for="type">Type</label>
              <input
                type="text"
                class="form-control"
                name="type"
                placeholder="Type Activity"
                required
              />
            </div>
            <div class="form-group">
              <label for="image">Image</label>
              <input
                type="file"
                class="form-control"
                name="image"
                placeholder="Enter image"
              />
            </div>
            <input type="hidden" value="<%= itemId %>" name="itemId" />
            <button type="submit" class="btn btn-primary">Add</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTableActivity"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No.</th>
                  <th>Name Activity</th>
                  <th>type</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
