<div
  class="tab-pane fade show active"
  id="show-feature"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <!-- DataTales Example -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <h3 class="mb-4">Feature</h3>
      <div class="row">
        <div class="col-md-5">
          <form
            method="POST"
            enctype="multipart/form-data"
            id="form-feature"
            action="https://staycation-server-fadil.herokuapp.com/admin/item/feature/add"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control name-feature"
                name="name"
                placeholder="Enter Feature Name"
                required
              />
            </div>
            <div class="form-group">
              <label for="quantity">Quantity</label>
              <input
                type="number"
                class="form-control quantity"
                name="quantity"
                id="quantity"
                placeholder="Enter Qty Feature"
                required
              />
            </div>
            <div class="form-group">
              <label for="image">Image</label>
              <input type="file" class="form-control" name="image"/>
            </div>
            <input type="hidden" value="<%= itemId %>" name="itemId" class="itemId"/>
            <input type="hidden" name="featureId" class="featureId">
            <div class="form-group">
                <input type="submit" class="btn btn-primary save-edit-feature" value="save"></input>
                <input type="reset" class="btn btn-danger reset-feature" value="Reset">
            </div>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTable"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No.</th>
                  <th>Nama</th>
                  <th>Qty</th>
                  <th>Image</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% features.forEach((feature, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= feature.name %></td>
                  <td><%= feature.quantity %></td>
                  <td>
                    <img
                      src="https://staycation-server-fadil.herokuapp.com/<%= feature.imageUrl %>"
                      alt=""
                      srcset=""
                      style="max-height: 50px"
                    />
                  </td>
                  <td>
                    <form
                      action="/admin/item/feature/delete/<%= feature.id %>?_method=DELETE"
                      method="POST"
                      onsubmit="return confirm('Delete this item?');"
                    >
                      <a
                        href="javascript:void(0)"
                        type="button"
                        class="btn btn-warning btn-circle btn-sm button-update-feature"
                        data-id="<%= feature.id %>"
                        data-name="<%= feature.name %>"
                        data-quantity="<%= feature.quantity %>"
                        data-imageurl="<%= feature.imageUrl %>"
                        data-itemid="<%= feature.itemId %>"
                      >
                        <i class="fas fa-edit"></i>
                      </a>
                      <button
                        type="submit"
                        class="btn btn-danger btn-circle btn-sm"
                      >
                        <i class="fas fa-trash-alt"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>