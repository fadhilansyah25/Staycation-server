<%- include('../../../partials/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%- include('../../../partials/sidebar.ejs') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <%- include('../../../partials/navbar.ejs') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Alert Message -->
        <%- include('../../../partials/alertMessage.ejs') %>

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Item</h1>
        <!-- End of Page Heading -->

        <!-- show table Item & add item -->
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a
              class="nav-link active"
              id="home-tab"
              data-toggle="tab"
              href="#show-feature"
              role="tab"
              aria-controls="home"
              aria-selected="true"
              >Show Feature</a
            >
          </li>
          <li class="nav-item" role="presentation">
            <a
              class="nav-link"
              id="profile-tab"
              data-toggle="tab"
              href="#show-activity"
              role="tab"
              aria-controls="profile"
              aria-selected="false"
              >Show Activity</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <%- include("show_feature.ejs") %> <%- include("show_activity.ejs") %>
        </div>

        <!-- show image item -->
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include('../../../partials/footer.ejs') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<%- include('../../../partials/js.ejs') %>
<script>
  $("#dataTable").on("click", ".button-update-feature", function () {
    let id = $(this).data("id");
    let name = $(this).data("name");
    let quantity = $(this).data("quantity");
    $(".featureId").val(id);
    $(".name-feature").val(name);
    $(".quantity").val(quantity);
    $(".save-edit-feature").val("edit");
    $("#form-feature").attr('action', 'http://localhost:3000/admin/item/feature/edit?_method=PUT');
  });

  $(".reset-feature").on("click", function () {
    $(".save-edit-feature").val("Save");
    $(".featureId").val("");
    $("#form-feature").attr('action', 'http://localhost:3000/admin/item/feature/add');
  });

  $("#dataTableActivity").on("click", ".button-update-activity", function () {
    let id = $(this).data("id");
    let name = $(this).data("name");
    let type = $(this).data("type");
    $(".activityId").val(id);
    $(".name-activity").val(name);
    $(".type").val(type);
    $(".save-edit-activity").val("edit");
    $("#form-activity").attr('action', 'http://localhost:3000/admin/item/activity/edit?_method=PUT');
  });

  $(".reset-activity").on("click", function () {
    $(".save-edit-activity").val("Save");
    $(".activityId").val("");
    $("#form-activity").attr('action', 'http://localhost:3000/admin/item/activity/add');
  });
</script>
<script>
  $(document).ready(function () {
    $("#dataTableActivity").DataTable();
  });
</script>
