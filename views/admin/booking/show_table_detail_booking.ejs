<div class="card shadow mb-4 mt-2">
  <div class="card-header py-3">
    <a href="/admin/booking" class="btn btn-warning btn-icon-split btn-sm"
      ><span class="icon"><i class="fas fa-arrow-left"></i></span
      ><span class="text"> Back </span></a
    >
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img
          src="http://localhost:3000/<%= booking.payments.proofPayment %>"
          alt=""
          class="img-fluid"
        />
        <% if (booking.payments.status === 'Process') { %>
        <div class="row ml-2 mt-3">
          <form
            action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT"
            method="POST"
            onsubmit="return confirm('Confirm this payment?');"
            class="ml-2"
          >
            <button type="submit" class="btn btn-success btn-sm">
              <span class="text">Confirm</span
              ><span class="icon ml-2"><i class="fas fa-check"></i></span>
            </button>
          </form>
          <form
            action="/admin/booking/<%= booking.id %>/rejection?_method=PUT"
            method="POST"
            onsubmit="return confirm('Reject this payment?');"
            class="ml-2"
          >
            <button type="submit" class="btn btn-danger btn-sm">
              <span class="text">Reject</span
              ><span class="icon ml-2"><i class="fas fa-times"></i></span>
            </button>
          </form>
        </div>
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table class="table table-bordered" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Name Member</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>Title</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= booking.memberId.firstName %> <%= booking.memberId.lastName%>
                </td>
                <td><%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
                <td><%= booking.itemId.title%></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
